<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/orange</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/gray</item>
        <item name="android:colorBackground">@color/background_gray</item>
        <item name="colorOnBackground">@color/orange</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <style name="InformationTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginBottom">10sp</item>
    </style>

</resources>
