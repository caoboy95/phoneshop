<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.product.detail.info.InfoFragment"
        android:orientation="horizontal">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center">

        </androidx.recyclerview.widget.RecyclerView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_view_info"
            android:paddingRight="20sp"
            android:paddingLeft="20sp">
        <TextView
            android:id="@+id/text_view_title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            />
        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textSize="20sp"
            android:layout_below="@id/text_view_title_name"
            android:layout_marginBottom="10sp"
            />
        <TextView
            android:id="@+id/text_view_title_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Loại"
            android:textSize="20sp"
            android:layout_below="@id/text_view_name"
            android:layout_marginTop="10sp"
            />
        <TextView
            android:id="@+id/text_view_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type"
            android:textSize="20sp"
            android:layout_below="@id/text_view_title_type"
            android:layout_marginBottom="10sp"/>
        <TextView
            android:id="@+id/text_view_title_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hãng"
            android:textSize="20sp"
            android:layout_below="@id/text_view_type"
            android:layout_marginTop="10sp"
            />
        <TextView
            android:id="@+id/text_view_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Brand"
            android:textSize="20sp"
            android:layout_below="@id/text_view_title_brand"
            android:layout_margin="0sp"
            />
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
</layout>