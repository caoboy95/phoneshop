<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="150sp"
        android:layout_height="95sp">
        <androidx.cardview.widget.CardView
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/CardViewStyle">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RadioButton
                    android:id="@+id/radio_button_select_variant"
                    android:layout_width="30sp"
                    android:layout_height="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5sp"/>

                <TextView
                    android:id="@+id/text_view_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_version"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textColor="@color/font_info"
                    android:layout_below="@id/radio_button_select_variant"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/text_view_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_cost"
                    android:gravity="center"
                    android:textColor="@color/font_info"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/text_view_version"
                    android:layout_marginBottom="5sp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>